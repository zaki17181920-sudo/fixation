{
  "entities": {
    "PaySlip": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PaySlip",
      "type": "object",
      "description": "Represents the complete pay slip information for a teacher.",
      "properties": {
        "pran": { "type": "string", "description": "PRAN number." },
        "competencyApplicationNumber": { "type": "string", "description": "Competency application number." },
        "office": { "type": "string", "description": "Office name." },
        "districtEducationOfficer": { "type": "string", "description": "District Education Officer." },
        "district": { "type": "string", "description": "District name." },
        "teacherName": { "type": "string", "description": "Name of the teacher." },
        "schoolName": { "type": "string", "description": "Name of the school." },
        "udiseCode": { "type": "string", "description": "U-DISE code of the school." },
        "className": { "type": "string", "description": "Class taught by the teacher." },
        "subject": { "type": "string", "description": "Subject taught by the teacher." },
        "appointmentCategory": { "type": "string", "description": "Category of appointment." },
        "dateOfBirth": { "type": "string", "format": "date", "description": "Date of birth of the teacher." },
        "dateOfJoiningAsSpecificTeacher": { "type": "string", "format": "date", "description": "Date of joining as a specific teacher." },
        "dateOfTraining": { "type": "string", "format": "date", "description": "Date of training." },
        "efficiencyType": { "type": "string", "description": "Type of efficiency (e.g., BTET, CTET, STET)." },
        "bankDetails": { "type": "string", "description": "Name of the bank." },
        "ifscCode": { "type": "string", "description": "IFSC code of the bank." },
        "bankAccountNumber": { "type": "string", "description": "Bank account number." },
        "dateOfFirstJoiningAsLocalBodyTeacher": { "type": "string", "format": "date", "description": "Date of first joining as a local body teacher." },
        "dateOfReceivingTrainedPayScale": { "type": "string", "format": "date", "description": "Date of obtaining trained pay scale." },
        "serviceBreak": { "type": "string", "description": "Whether there is a service break (Yes/No)." },
        "december2024Salary": { "type": "string", "description": "Basic salary in December 2024." },
        "newSalaryWithIncrement": { "type": "string", "description": "New basic salary with increment." },
        "payMatrixSalary": { "type": "string", "description": "Basic salary as per pay matrix." },
        "nextIncrementDate": { "type": "string", "format": "date", "description": "Date of next increment." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of when the record was created." }
      },
      "required": [
        "pran",
        "competencyApplicationNumber",
        "office",
        "districtEducationOfficer",
        "district",
        "teacherName",
        "schoolName",
        "udiseCode",
        "className",
        "subject",
        "appointmentCategory",
        "dateOfBirth",
        "dateOfJoiningAsSpecificTeacher",
        "dateOfTraining",
        "efficiencyType",
        "bankDetails",
        "ifscCode",
        "bankAccountNumber",
        "dateOfFirstJoiningAsLocalBodyTeacher",
        "dateOfReceivingTrainedPayScale",
        "december2024Salary",
        "newSalaryWithIncrement",
        "payMatrixSalary",
        "nextIncrementDate",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "collections": {
      "/payslips/{payslipId}": {
        "schema": { "$ref": "#/backend/entities/PaySlip" },
        "description": "Stores all the payslip form data submitted by users."
      }
    }
  }
}
